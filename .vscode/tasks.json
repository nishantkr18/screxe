{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "compile",
            "command": "g++",
            "args": [
                "-pthread",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/executables/${fileBasenameNoExtension}",
                "-std=c++11"
            ],
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            }
        },
        {
            "label": "Compile and run",
            "type": "shell",
            "command": "time ${fileDirname}/executables/${fileBasenameNoExtension}",
            "args": [],
            "dependsOn": [
                "compile"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {}
        }
    ]
}